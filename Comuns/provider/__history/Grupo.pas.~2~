  end;

  FrameBtn.BtnEditar.Enabled := false;
  FrameBtn.BtnExcluir.Enabled := false;

  //Liberar os Enabled dos Campos
  DBNome.Enabled := true;
  DBComboBox.Enabled := true;

end;

